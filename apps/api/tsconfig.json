{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@regintel/domain": ["../../packages/domain/src"],
      "@regintel/domain/*": ["../../packages/domain/src/*"],
      "@regintel/security": ["../../packages/security/src"],
      "@regintel/security/*": ["../../packages/security/src/*"]
    }
  },
  "include": ["src/**/*"]
}
