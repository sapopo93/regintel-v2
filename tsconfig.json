{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@regintel/domain/*": ["packages/domain/src/*"],
      "@regintel/security/*": ["packages/security/src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["scripts/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
